<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/sample_product"
            android:layout_alignParentStart="true" />

        <!-- Item Name -->
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="18sp"
            android:layout_toEndOf="@id/iv_item_image"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true" />

        <!-- Quantity and Price -->
        <TextView
            android:id="@+id/tv_item_quantity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 * $8.99"
            android:textSize="16sp"
            android:layout_below="@id/tv_item_name"
            android:layout_toEndOf="@id/iv_item_image"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp" />

        <!-- Total Price -->
        <TextView
            android:id="@+id/tv_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$17.98"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <!-- Quantity Buttons -->
        <LinearLayout
            android:id="@+id/ll_quantity_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_item_total_price"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btn_decrease_quantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/minus"
                android:contentDescription="Decrease Quantity" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_increase_quantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/plus"
                android:src="@android:drawable/ic_media_next"
                android:contentDescription="Increase Quantity" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>